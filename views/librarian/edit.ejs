<div class="flex flex-col w-screen h-screen overflow-auto text-gray-700 bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200">
  <div class="flex items-center flex-shrink-0 w-full h-16 px-10 bg-white bg-opacity-40">
    <a href="/librarian/dashboard">
      <svg class="w-8 h-8 text-indigo-600 stroke-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
      </svg>
    </a>
    <div class="ml-10">
      <a class="mx-2 text-sm font-semibold text-gray-600 hover:text-indigo-700" href="/librarian/transactions">Transactions</a>
      <a class="mx-2 text-sm font-semibold text-gray-600 hover:text-indigo-700" href="/librarian/report">Report</a>
    </div>
  </div>

  <div class="flex items-center justify-center w-screen h-full">
    <form class="mt-4 bg-white shadow-md rounded-lg text-left w-96" method="post" action="/librarian/edit-book/<%= book._id %>">
      <div class="h-2 bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 rounded-t-md"></div>
      <div class="px-8 py-6">
        <label class="block font-semibold"> Title</label>
        <input
          type="text"
          name="title"
          value="<%= book.title %>"
          placeholder="Title"
          class="border w-full h-5 px-3 py-5 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md"
        />
        <label class="block mt-3 font-semibold"> Author </label>
        <input
          type="text"
          name="author"
          value="<%= book.author %>"
          placeholder="Author"
          class="border w-full h-5 px-3 py-5 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md"
        />
        <label class="block mt-3 font-semibold"> ISBN </label>
        <input
          type="text"
          name="isbn"
          value="<%= book.isbn %>"
          placeholder="ISBN"
          class="border w-full h-5 px-3 py-5 mt-2 hover:outline-none focus:outline-none focus:ring-indigo-500 focus:ring-1 rounded-md"
        />
        <div class="flex justify-between items-baseline">
          <button
            type="submit"
            class="mt-4 bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200 text-white py-2 px-6 rounded-md hover:bg-purple-600 w-full"
          >
            Edit
          </button>
        </div>
      </div>
    </form>
  </div>
</div>
